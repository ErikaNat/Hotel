    <script is:inline>
      document.addEventListener('DOMContentLoaded', function() {
        // Configuraci√≥n base para cada tipo de habitaci√≥n
        const roomConfig = {
          'bcompartido': {
            basePrice: 0,
            defaultPeriod: '   Por Noche'
          },
          'bprivado': {
            basePrice: 0,
            defaultPeriod: '   Por Noche'
          }
        };
        
        // Funci√≥n para actualizar precio y per√≠odo
        function updatePriceAndPeriod(roomCard) {
          const imgAlt = roomCard.querySelector('.room-image img').alt;
          const roomType = imgAlt.includes('Privado') ? 'bprivado' : 'bcompartido';
          let total = roomConfig[roomType].basePrice;
          let periodText = roomConfig[roomType].defaultPeriod;
          
          // Obtener todas las opciones seleccionadas
          const checkedInputs = roomCard.querySelectorAll('.room-options input:checked');
          
          checkedInputs.forEach(input => {
            total += parseInt(input.value) || 0;
            
            // Determinar el texto del per√≠odo basado en la selecci√≥n
            if (input.name.includes('tipo-') && input.getAttribute('data-group') === 'horas') {
              const hoursMatch = input.parentElement.textContent.match(/(\d+)\s*Hora/);
              if (hoursMatch) {
                const hours = hoursMatch[1];
                periodText = hours === '1' ? '   Por Hora' : `   Por ${hours} Horas`;
              }
            }
          });
          
          // Actualizar la UI
          roomCard.querySelector('.room-price').textContent = total;
          roomCard.querySelector('.price-period').textContent = periodText;
        }
        
        // Configurar los event listeners para los inputs
        function setupPriceCalculators() {
          document.querySelectorAll('.room-options input').forEach(input => {
            input.addEventListener('change', function() {
              const roomCard = this.closest('.room-card');
              
              // Manejar radios para selecci√≥n √∫nica por grupo
              if (this.type === 'radio') {
                const groupName = this.getAttribute('data-group');
                if (groupName) {
                  roomCard.querySelectorAll(`input[data-group="${groupName}"]`).forEach(radio => {
                    if (radio !== this) radio.checked = false;
                  });
                }
              }
              
              updatePriceAndPeriod(roomCard);
            });
          });
        }
        
        // Funci√≥n para los botones de mostrar/ocultar
        function setupToggleButtons() {
          document.querySelectorAll('.toggle-btn').forEach(button => {
            button.addEventListener('click', function(e) {
              e.preventDefault();
              const card = this.closest('.room-card');
              const description = card.querySelector('.room-description');
              
              if (description.style.display === 'block' || 
                  getComputedStyle(description).display === 'block') {
                description.style.display = 'none';
                this.textContent = 'Ver Precios';
                this.setAttribute('data-state', 'view');
              } else {
                description.style.display = 'block';
                this.textContent = 'Ocultar';
                this.setAttribute('data-state', 'hide');
              }
            });
          });
        }

        // Inicializaci√≥n
        setupToggleButtons();
        setupPriceCalculators();
        
        // Establecer valores iniciales
        document.querySelectorAll('.room-card').forEach(card => {
          updatePriceAndPeriod(card);
        });
      });
    </script>









